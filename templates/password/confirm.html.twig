{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <div class="col-lg-6">
            {{ title | h1 }}

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary btn-sm" type="submit">Envoyer</button>
            <button class="btn btn-danger btn-sm" type="reset">Effacer</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
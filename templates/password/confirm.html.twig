{% extends 'base.html.twig' %}

{% block title %}Reset my password{% endblock %}

{% block body %}

    <h1>Reset password</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary" type="submit">Send</button>
    <button class="btn btn-danger" type="reset">Erase</button>
    {{ form_end(form) }}

{% endblock %}
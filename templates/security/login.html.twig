{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    {% if app.user is null %}
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {{ title | h1 }}

                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary mt-3 btn-sm" type="submit">Connexion</button>
                    <button type="reset" class="btn btn-danger mt-3 btn-sm">Effacer</button>
                    <p class="mt-3"><a href="{{ path('check_user') }}">Mot de passe oublié ?</a></p>
                </form>
            {% else %}
                <h3>Vous êtes déja connecter</h3>
            {% endif %}
            </div>
        </div>

{% endblock %}

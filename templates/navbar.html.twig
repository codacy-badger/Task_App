<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
    <a class="navbar-brand" href="{{ path('tasks') }}">Task App
        {% if app.user %}
            Bonjour {{ app.user.username }}
            {% if app.user.image %}
                <img src="{{ asset('/uploads/images/' ~ app.user.image) }}" alt="avatar">
            {% else %}
                <i class="fas fa-user-circle"></i>
            {% endif %}
        {% endif %}
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('tasks') }}">Mes notes</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('profile') }}">Mon profil</a>
                </li>
            {% endif %}
            {% if app.user is null %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('user_index') }}">Géstion des membres</a>
                </li>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
                </li>

        </ul>
        <form action="{{ path('search') }}" method="post" class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" name="search" required placeholder="titre, contenu, date">
            <input type="hidden" name="token" value="{{ csrf_token('search') }}" />
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Recherche</button>
        </form>
        {% endif %}
    </div>
    </div>
</nav>